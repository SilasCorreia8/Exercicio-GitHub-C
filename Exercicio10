/*
10. Fazer uma rotina que recebe um array do tipo double e o número de valores 
que devem ser solicitados ao usuário e devolve o array preenchido com os
valores digitados.

*/

#include <stdio.h>
#include <stdlib.h>

int main () {
    
    int num, maior, menor;
    
    maior = menor;
    menor = maior;
    
    for(int i=1; i<=10; i++) {
        
        printf("Digite o %d ",i);
        scanf("%d",&num);
        
        if (num > maior) {
            maior = num;
        }
        
        if (num <= menor) {
            menor = num;
        }
     
        printf("%d",menor);
        
    }
    
    printf("O maior número digitado foi %d",maior);
    printf("\nO menor número digitado foi %d",menor);
    
}
